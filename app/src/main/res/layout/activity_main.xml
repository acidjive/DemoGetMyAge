<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="vertical">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etDOB" android:hint="Enter your Birth Year"/>
    <Button
            android:text="Get my Age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnGetAge"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:text="Your Age shows here"
            android:id="@+id/tvShowAge"/>
    <TextView
            android:text="Age Group Category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tvAgeGrp"/>

</LinearLayout>